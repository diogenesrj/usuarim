[module/wired-network]
type = internal/network
interface = g3net1
interval = 3.0

accumulate-stats = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>

format-connected-prefix = "ÔÉÅ  "
;format-disconnected-prefix = "ÔÑß "
format-connected-prefix-foreground = ${colors.secondary}
format-disconnected-prefix-foreground = ${colors.secondary}

label-connected = "%{F#bd2c40}ÔÖâ %{F-}%downspeed:min:max% %{F#3871CD}ÔÖà  %{F-}%upspeed:min:max%"
;label-connected = %linkspeed%
label-connected-foreground = ${colors.foreground}

label-disconnected = 
;label-disconnected = Óßæ
;label-disconnected-foreground = #66ffffff

[module/wireless-network]
type = internal/network
interface = g3net2
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid% "%{F#bd2c40}ÔÖâ %{F-}%downspeed:min:max% %{F#3871CD}ÔÖà  %{F-}%upspeed:min:max%"

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = Óàò
ramp-signal-1 = Óàô
ramp-signal-2 = Óàö
ramp-signal-3 = Óàö
ramp-signal-4 = Óàö
ramp-signal-foreground = ${colors.foreground-alt}


[module/kernel]
type = custom/script
exec = hostnamectl | awk -F- '/Kernel/{ OFS="-";NF--; print }'|awk '{print $3}'
format =  <label>
format-prefix = "ÓÄé "
format-prefix-foreground = ${colors.secondary}

[module/load-average]
type = custom/script
exec = cat /proc/loadavg | awk '!($4=$NF="")'
interval = 5
format =  <label>
format-prefix = "ÓÄ¢ "
format-prefix-foreground = ${colors.secondary}

[module/coretemps]
type = custom/script
exec-if = sensors
exec = sensors|awk '/Core/{print substr($3, 2, length($3)-5)}'|awk '{if (match($0,/[0-9]+/,m)) print m[0]"¬∞C"}'|tr '\n' ' '
format =  <label>
format-prefix = "ÓÄ¶ "
format-prefix-foreground = ${colors.secondary}

[module/bitcoin]
type = custom/script
exec =  ~/.config/polybar/bit.py
interval = 15
format =  <label>
format-prefix = "ÔÖö "
format-prefix-foreground = ${colors.secondary}

[module/filesystem]
type = custom/script
exec =  df -h / | awk 'NR==2 {print $5}'
format =  <label>
format-prefix = "ÓÄ´ "
format-prefix-foreground = ${colors.secondary}

[module/hddtemp]
type = custom/script
exec = nc localhost 7634 | awk -F'|' '{print $4}' | sed 's/$/¬∞C/'
format =  <label>
format-prefix = "ÓÜª "
format-prefix-foreground = ${colors.secondary}

