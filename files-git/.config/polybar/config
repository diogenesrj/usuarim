;;;;;;;;;;;;;;;;;;;;;;;;;; P I N G ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/ping]
type = custom/script
interval = 60
label = %output%
exec = ~/.config/polybar/ping.sh -v
tail = true

;;;;;;;;;;;;;;;;;;;;;;;;;;;; W A L L P A P E R ;;;;;;;;;;;;;;;;;;;;;

[module/wallpaper]
type = custom/text
click-left = feh --bg-scale $(find ~/Imagens/wallpapers -type f | shuf -n 1)
content = "%{F#9C9EA2}Óáê %{F-}"


;;;;;;;;;;;;;;;;;;;;;;;;; E T H E R N E T ;;;;;;;;;;;;;;;;;;;

[module/wired-network]
type = internal/network
interface = g3net1
interval = 3.0

accumulate-stats = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>

;format-connected-prefix = "Óàñ  "
;format-disconnected-prefix = "Óàó "
format-connected-prefix-foreground = ${colors.secondary}
format-disconnected-prefix-foreground = ${colors.secondary}

label-connected = "%{F#9C9EA2}ÓÅß %{F-}%downspeed:min:max% %{F#6F7A81}ÓÅ¶  %{F-}%upspeed:min:max%"
;label-connected = %linkspeed%
:label-connected-foreground = ${colors.foreground}

;label-disconnected =
;label-disconnected = Óßæ
;label-disconnected-foreground = #66ffffff

