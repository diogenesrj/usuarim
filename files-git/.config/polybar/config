;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;; M E M O R I A ;;;;;;;;;;;;;;;;;;;;;;;;;

[module/memory]
type = custom/script
exec = free -m |awk '/^Mem/ {printf("%u%%",100*$3/$2);}'
interval = 2
format =  <label>
format-prefix = "ÓÉÖ "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;;; D A T A ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/date]
type = custom/script
exec =  date +%a\ %d/%m/%y|sed -E 's/\S+/\u&/'
format =  <label>
format-prefix = "Óà¶ "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;;; R E L O G I O ;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/clock]
type = custom/script
exec = date +%H:%M:%S
interval = 1
format =  <label>
format-prefix = "ÓÄò "
format-prefix-foreground = ${colors.secondary}

