;;;;;;;;;;;;;;;;;;;;;;;;;;; K E R N E L ;;;;;;;;;;;;;;;;;;;;;;;;

[module/kernel]
type = custom/script
exec = uname -r |sed  s/-ARCH//g
format =  <label>
format-prefix = "ÓÉù "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;;;; L O A D - O V E R A G E ;;;;;;;;;;;;;

[module/load-average]
type = custom/script
exec = cat /proc/loadavg | awk '!($4=$NF="")'
interval = 5
format =  <label>
format-prefix = "ÓÉÅ "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;;;; C O R E T E M P S ;;;;;;;;;;;;;;;;;;;;;

[module/coretemps]
type = custom/script
exec-if = sensors
exec = sensors|grep 'Core'|awk '{print $3}'|sed ':a;$!N;s/\n/ /g;s/[+,0,.]//g'
format =  <label>
format-prefix = "ÓáÄ "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;; B I T C O I N ;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/bitcoin]
type = custom/script
exec =  ~/.config/polybar/bit.py
interval = 15
format =  <label>
format-prefix = "$  "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;;;;;; F I L E S Y S T E M ;;;;;;;;;;;;;;;;;;;;;;

[module/filesystem]
type = custom/script
exec =  df -h / | awk 'NR==2 {print $5}'
format =  <label>
format-prefix = "ÓÄ´ "
format-prefix-foreground = ${colors.secondary}

;;;;;;;;;;;;;;;;;;;;; H D D T E M P ;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/hddtemp]
type = custom/script
exec = nc localhost 7634 | awk -F'|' '{print $4}' | sed 's/$/¬∞C/'
format =  <label>
format-prefix = "ÓÖÑ  "
format-prefix-foreground = ${colors.secondary}

